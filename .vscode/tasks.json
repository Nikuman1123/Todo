{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Git Pull with Check",
      "type": "shell",
      "command": "${workspaceFolder}/git-pull-safe.sh",
      "linux": {
        "command": "${workspaceFolder}/git-pull-safe.sh"
      },
      "osx": {
        "command": "${workspaceFolder}/git-pull-safe.sh"
      },
      "windows": {
        "command": "powershell",
        "args": [
          "-ExecutionPolicy",
          "Bypass",
          "-File",
          "${workspaceFolder}\\git-pull-safe.ps1"
        ]
      },
      // "runOn": "folderOpen",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always"
      }
    }
  ]
}
